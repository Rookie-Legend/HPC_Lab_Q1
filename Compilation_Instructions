// Commands
sudo apt install mpich libopenmpi-dev
mpic++ example_file.cpp -o example_file
ssh-keygen
ssh-copy-id <username>@<IP>
scp example_file <username>@<IP>:/home/<username>/
touch hostfile
nano hostfile
mpirun -np <number of processors> --hostfile hostfile example_file

// hostfile
<username>@<IP> slots=<number of processors>
<username>@<IP> slots=<number of processors>
